# Example environment variables for canteen-management-backend
# Copy this to a .env file and fill values

# MongoDB connection string (required)
MONGODB_URI=mongodb+srv://<username>:<password>@cluster0.example.mongodb.net/canteen_management

# JWT secret for signing tokens (required)
JWT_SECRET=your_jwt_secret_here

# Allowed origins for CORS (comma-separated). In development you can leave empty to allow all.
ALLOWED_ORIGINS=http://localhost:3000

# Port to run server
PORT=5000

# Request body limits
JSON_LIMIT=10mb
URLENCODE_LIMIT=10mb

# Node env
NODE_ENV=development

# Gemini AI API key for chatbot (required for chatbot feature)
GEMINI_API_KEY=your_gemini_api_key_here

# ML Service URL (for recommendations)
ML_SERVICE_URL=http://localhost:5001
